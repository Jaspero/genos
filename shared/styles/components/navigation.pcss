pb-navigation {
    header {
        z-index: 10;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: rgba(0,0,0,.36);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        transition: .2s;
        &.inactive {
            transform: translateY(-100%);
        }
        nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 75rem;
            width: 100%;
            height: 6rem;
            padding: 1rem;
            margin: 0 auto;
            & > a img {
                width: 10rem;
            }
            .links {
                display: flex;
                gap: 2rem;
                a, button {
                    position: relative;
                    opacity: .85;
                    color: white;
                    font-weight: bold;
                    transition: .2s;
                    .line-thing {
                        position: absolute;
                        bottom: -.125rem;
                        width: 20px;
                        height: 2px;
                        background-color: #f7e704;
                        transition: .2s;
                    }
                    &:hover, &.active {
                        opacity: 1;
                        .line-thing {
                            width: 100%;
                        }
                    }
                }
                a {
                    @media (max-width: 1280px) {
                        display: none;
                    }
                }
                button {
                    @media (min-width: 1281px) {
                        display: none;
                    }
                }
            }
        }
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        cursor: unset;
        background-color: rgba(0,0,0,.25);
    }
    .menu {
        position: fixed;
        top: 0;
        right: 0;
        display: flex;
        flex-direction: column;
        gap: .5rem;
        max-width: 16rem;
        padding: 2rem;
        width: 100%;
        height: 100%;
        background-color: white;
        a {
            font-size: 1.25rem;
            font-weight: bold;
            opacity: .5;
            transition: .2s;
            &:hover, &.active {
                opacity: 1;
            }
        }
        .filler {
            flex: 1 1 0;
        }
        .socials {
            display: flex;
            gap: .5rem;
        }
    }
}