pb-intro {
    position: relative;
    display: flex;
    align-items: flex-end;
    width: 100%;
    height: 25rem;
    border-radius: .5rem;
    overflow: hidden;

    .intro-bg {
        z-index: -1;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    h1 {
        color: white;
    }

    &.pb-intro-alt {
        height: 32rem;
    }
}